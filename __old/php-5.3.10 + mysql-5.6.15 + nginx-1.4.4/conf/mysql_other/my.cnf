########## NETDRAGON MYSQL Default conf for V5.0 ##########
[client]
#password       = your_password
port            = 3306
socket          = /tmp/mysql.sock

# The MySQL server
[mysqld]
port            = 3306
socket          = /tmp/mysql.sock
pid-file        = /mysql/3306/mysql.pid
skip-locking
basedir = /usr/local/mysql
datadir = /mysql/3306/data
log-error = /mysql/3306/mysql_error.log
log-bin = /mysql/3306/binlog/binlog
default-character-set=utf8
max_binlog_size = 100M
tmpdir = /dev/shm/
expire_logs_days = 14

########## 以上的MYSQL_PORT必需改成相应起用的端口 ##########
################# 以下为同步时会更改的选项 #################
server-id = 1003
### 同步服务器上可以关闭以下选项 ###
log_slow_queries = /mysql/3306/slow.log
long_query_time = 1
log_long_format
#log=/data/mysql_log/query_log_3306.log
####################################
log-slave-updates
relay-log = /mysql/3306/relaylog/relaylog
relay-log-index = /mysql/3306/relaylog/relaylog
relay-log-info-file = /mysql/3306/relaylog/relaylog

##replicate-do-db=${MYSQL_SYNC_DATABASE}
#replicate-ignore-db=${MYSQL_DONT_SYNC_DATABASE}
#master-connect-retry=60
############################################################
################# 以下为较少更改的选项 #################
key_buffer = 2G
max_allowed_packet = 32M
table_cache = 2048
table_definition_cache = 2048
sort_buffer_size = 4M
join_buffer_size = 4M
net_buffer_length = 8K
read_buffer_size = 2M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size =64M
myisam_sort_buffer_size = 128M
thread_cache = 8
thread_concurrency = 16
thread_cache_size = 205
query_cache_size= 128M
query_cache_type=1
query_cache_limit = 2M
default_table_type = MyISAM
thread_stack = 192K
max_heap_table_size = 123M
binlog_cache_size = 4M
max_binlog_cache_size = 8M

max_connect_errors=9999999
max_connections=2000
wait_timeout=300
skip-name-resolve
#slave-skip-errors=1062
lower_case_table_names=1
back_log=400

#skip-networking
max_tmp_tables=32M
tmp_table_size = 2048M

#skip-bdb
########################################################
################# 以下为Innodb相应选项 #################
#skip-innodb
innodb_additional_mem_pool_size = 128M
innodb_buffer_pool_size = 1G
innodb_data_file_path = ibdata1:512M:autoextend
innodb_file_io_threads = 4
innodb_thread_concurrency = 8
innodb_flush_log_at_trx_commit = 0
innodb_log_buffer_size = 8M
innodb_log_file_size = 256M
innodb_log_files_in_group = 3
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 120
innodb_file_per_table = 0
########################################################
[mysqldump]
quick
max_allowed_packet = 32M
[mysql]
no-auto-rehash
#Remove the next comment character if you are not familiar with SQL
#safe-updates

[isamchk]
key_buffer = 8M
sort_buffer_size = 8M

[myisamchk]
key_buffer = 8M
sort_buffer_size = 8M

[mysqlhotcopy]
interactive-timeout

[mysqld_safe]
open-files-limit=65535
